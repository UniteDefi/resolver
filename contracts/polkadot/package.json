{
  "name": "@unite-defi/polkadot-contracts",
  "version": "1.0.0",
  "description": "Polkadot smart contracts for Unite DeFi",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "compile": "cd counter && cargo contract build --release",
    "deploy:local": "ts-node scripts/deploy.ts",
    "deploy:testnet": "NETWORK=testnet ts-node scripts/deploy.ts"
  },
  "keywords": [
    "polkadot",
    "substrate",
    "ink",
    "smart-contracts"
  ],
  "author": "Unite DeFi",
  "license": "MIT",
  "devDependencies": {
    "@polkadot/api": "^10.12.1",
    "@polkadot/api-contract": "^10.12.1",
    "@polkadot/keyring": "^12.6.2",
    "@polkadot/util": "^12.6.2",
    "@polkadot/util-crypto": "^12.6.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "dotenv": "^16.3.1",
    "jest": "^29.7.0",
    "jest-util": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
