{
  "name": "unite-starknet-contracts",
  "version": "1.0.0",
  "description": "StarkNet HTLC contracts for cross-chain swaps",
  "main": "index.js",
  "scripts": {
    "build": "scarb build",
    "clean": "scarb clean && rm -rf target/",
    "test": "jest tests/complete-crosschain-flow.test.ts --testTimeout=300000",
    "test:watch": "jest --watch",
    "generate-wallets": "ts-node scripts/generate-wallets.ts",
    "update-env": "ts-node scripts/update-env.ts",
    "setup-wallets": "npm run generate-wallets && npm run update-env",
    "deploy": "npm run build && ts-node scripts/deploy-contracts.ts",
    "fund": "ts-node scripts/fund-wallets.ts",
    "setup": "npm run deploy && npm run fund",
    "accounts:check": "ts-node scripts/check-accounts.ts",
    "balances:check": "ts-node scripts/check-balances.ts",
    "verify:hashes": "ts-node scripts/verify-hash-compatibility.ts",
    "verify": "npm run build && npm run verify:hashes && echo 'Contracts compiled successfully'",
    "dev": "npm run verify && npm run accounts:check && npm run setup && npm run test"
  },
  "dependencies": {
    "starknet": "^6.11.0",
    "ethers": "^6.13.2",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "testTimeout": 60000,
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"]
  },
  "keywords": [
    "starknet",
    "htlc",
    "cross-chain",
    "defi",
    "smart-contracts",
    "cairo"
  ],
  "author": "Unite Protocol",
  "license": "MIT"
}
