{
  "name": "unite-aptos-contracts",
  "version": "1.0.0",
  "description": "Unite Protocol Aptos Implementation for Cross-Chain Swaps",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "setup": "npx ts-node scripts/setup.ts",
    "build": "aptos move compile",
    "deploy": "yarn build && npx ts-node scripts/deploy.ts",
    "deploy:devnet": "APTOS_NETWORK=devnet yarn deploy",
    "deploy:testnet": "APTOS_NETWORK=testnet yarn deploy",
    "verify-deployment": "npx ts-node scripts/verify-deployment.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:crosschain": "npx vitest run tests/aptos-evm-crosschain.test.ts --reporter=verbose",
    "test:unit": "vitest run tests/unit.test.ts",
    "example:swap": "npx ts-node examples/simple-swap.ts",
    "example:monitoring": "npx ts-node examples/monitoring.ts",
    "clean": "rm -rf build/",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "get-address": "npx ts-node scripts/get_address.ts",
    "get-address:generate": "npx ts-node scripts/get_address.ts --generate"
  },
  "keywords": [
    "aptos",
    "move",
    "cross-chain",
    "swap",
    "htlc",
    "blockchain",
    "defi"
  ],
  "author": "Unite Protocol",
  "license": "MIT",
  "dependencies": {
    "@aptos-labs/ts-sdk": "^1.39.0",
    "dotenv": "^16.6.1",
    "ethers": "^6.8.0",
    "got": "^14.4.7"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unite-protocol/unite-aptos"
  },
  "files": [
    "contracts/",
    "scripts/",
    "tests/",
    "Move.toml",
    "deployments.json"
  ]
}
