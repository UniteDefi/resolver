{
  "name": "unite-osmosis-contracts",
  "version": "1.0.0",
  "description": "Unite cross-chain swap contracts for Osmosis",
  "main": "index.js",
  "scripts": {
    "build": "make build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "ts-node scripts/test-integration.ts",
    "deploy:testnet": "ts-node scripts/deploy-testnet.ts",
    "setup:cross-chain": "ts-node scripts/setup-cross-chain.ts",
    "setup:wallet": "ts-node scripts/generate-wallet.ts",
    "start:local": "docker-compose up -d",
    "stop:local": "docker-compose down",
    "lint": "eslint . --ext .ts,.js",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "check": "make check-env",
    "clean": "make clean",
    "full-setup": "make full-setup",
    "verify:contracts": "ts-node scripts/verify-deployment.ts"
  },
  "keywords": [
    "cosmos",
    "osmosis",
    "cosmwasm",
    "cross-chain",
    "defi",
    "htlc",
    "swap"
  ],
  "author": "Unite Protocol",
  "license": "MIT",
  "dependencies": {
    "@cosmjs/cosmwasm-stargate": "^0.32.0",
    "@cosmjs/proto-signing": "^0.32.0",
    "@cosmjs/stargate": "^0.32.0",
    "@cosmjs/crypto": "^0.32.0",
    "ethers": "^6.8.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
