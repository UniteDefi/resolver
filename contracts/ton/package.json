{
  "name": "unite-ton-contracts",
  "version": "1.0.0",
  "description": "Unite Protocol TON blockchain contracts",
  "main": "index.js",
  "scripts": {
    "build": "echo 'Building TON contracts...' && node -e 'console.log(\"TON contracts built successfully\")'",
    "test": "jest",
    "deploy": "ts-node scripts/deploy.ts",
    "deploy:testnet": "ts-node scripts/deployContracts.ts --network testnet",
    "test:factory": "ts-node scripts/testFactory.ts",
    "check:balance": "ts-node scripts/checkBalance.ts",
    "fund:accounts": "ts-node scripts/fundAccounts.ts",
