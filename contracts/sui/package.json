{
  "name": "unite-sui",
  "version": "1.0.0",
  "description": "Unite Protocol Sui Implementation for Cross-Chain Swaps",
  "main": "index.js",
  "scripts": {
    "build": "sui move build",
    "test": "jest",
    "deploy": "ts-node scripts/deploy.ts",
    "deploy:testnet": "SUI_NETWORK=testnet ts-node scripts/deploy.ts",
    "deploy:devnet": "SUI_NETWORK=devnet ts-node scripts/deploy.ts",
    "generate-wallet": "ts-node scripts/generate_wallet.ts",
    "fund-resolvers": "ts-node scripts/fund_resolvers.ts",
    "test:cross-chain": "jest tests/cross_chain.test.ts --timeout=300000",
    "test:unit": "jest tests/unit/ --timeout=60000",
    "clean": "rm -rf build/",
    "lint": "eslint . --ext .ts,.js",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@mysten/sui.js": "^0.54.1",
    "dotenv": "^16.3.1",
    "ethers": "^6.15.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.2",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ]
  },
  "keywords": [
    "sui",
    "cross-chain",
    "defi",
    "swap",
    "htlc",
    "blockchain"
  ],
  "author": "Unite Protocol",
  "license": "MIT"
}
