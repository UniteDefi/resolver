{
  "name": "stellar-counter-contract",
  "version": "1.0.0",
  "description": "Stellar Soroban counter contract with TypeScript tests",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:swap": "jest tests/unite-swap.test.ts",
    "build:contract": "cargo build --target wasm32-unknown-unknown --release",
    "deploy": "ts-node scripts/deploy-all.ts",
    "fund-wallets": "ts-node scripts/fund-wallets.ts",
    "mint-tokens": "ts-node scripts/mint-tokens.ts",
    "deploy:testnet": "ts-node scripts/deploy.ts --network testnet",
    "deploy:local": "ts-node scripts/deploy.ts --network local",
    "deploy:unite": "ts-node scripts/deploy-unite.ts --network=testnet",
    "setup:tokens": "ts-node scripts/setup-tokens.ts",
    "full:deploy": "npm run deploy && npm run fund-wallets && npm run mint-tokens"
  },
  "devDependencies": {
    "@stellar/stellar-sdk": "^11.2.2",
    "@types/bip39": "^3.0.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/node-fetch": "^2.6.13",
    "bip39": "^3.1.0",
    "dotenv": "^16.4.5",
    "ed25519-hd-key": "^1.3.0",
    "jest": "^29.7.0",
    "jest-util": "^30.0.5",
    "node-fetch": "^3.3.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
