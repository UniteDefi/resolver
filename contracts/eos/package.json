{
  "name": "eos-counter-contract",
  "version": "1.0.0",
  "description": "EOS Counter Smart Contract with TypeScript Testing",
  "scripts": {
    "build": "mkdir -p build && cd build && cmake .. && make",
    "clean": "rm -rf build",
    "test": "jest",
    "deploy:local": "ts-node scripts/deploy.ts",
    "deploy:testnet": "NODE_ENV=testnet ts-node scripts/deploy.ts"
  },
  "keywords": [
    "eos",
    "smart-contract",
    "blockchain"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "dotenv": "^16.3.1",
    "eosjs": "^22.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!node-fetch)"
    ],
    "extensionsToTreatAsEsm": [".ts"],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    }
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.13",
    "eosjs-ecc": "^4.0.7",
    "jest-util": "^30.0.5",
    "node-fetch": "^3.3.2"
  }
}
