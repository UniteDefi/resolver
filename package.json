{
  "name": "cross-chain-resolver-example",
  "version": "1.0.0",
  "description": "Example of 1inch cross chain resolver",
  "scripts": {
    "test": "forge build && node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "lint": "eslint  \"tests/**/*.ts\"",
    "build": "tsc",
    "start:resolvers": "tsx services/orchestrator.ts",
    "start:edge-cases": "tsx services/edge_case_tester.ts",
    "start:single-chain": "TEST_CHAINS=ethereum_sepolia tsx services/orchestrator.ts",
    "start:multi-chain": "TEST_CHAINS=ethereum_sepolia,base_sepolia,polygon_amoy,arbitrum_sepolia tsx services/orchestrator.ts",
    "generate:wallets": "tsx scripts/generate_random_wallets.ts",
    "fund:wallets": "tsx scripts/fund_test_wallets.ts",
    "deploy:base": "tsx scripts/deploy_tokens_base.ts",
    "start:base-test": "tsx services/base_sepolia_test.ts",
    "check:balances": "tsx scripts/check_balances.ts"
  },
  "devDependencies": {
    "@eslint/compat": "1.1.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.10.0",
    "@jest/globals": "29.7.0",
    "@swc/core": "1.5.25",
    "@swc/jest": "0.2.36",
    "@types/jest": "29.5.12",
    "@types/node": "^22.16.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "~9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-n": "^17.10.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "29.7.0",
    "prettier": "^3.2.5",
    "tsx": "^4.20.3",
    "typescript": "5.5.2",
    "zod": "3.23.8"
  },
  "author": "1inch",
  "engines": {
    "node": ">=22"
  },
  "volta": {
    "node": "22.5.1"
  },
  "dependencies": {
    "dotenv": "16.4.5",
    "ethers": "6.13.2",
    "prool": "0.0.24"
  }
}
